<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard Form -->
    <record id="view_province_reimbursements_report_form" model="ir.ui.view">
        <field name="name">province.reimbursements.report.form</field>
        <field name="model">province.reimbursements.report</field>
        <field name="arch" type="xml">
            <form string="Reporte de reembolsos de provincia">
                <footer>
                    <button name="action_print_xlsx"
                            string="Imprimir XLSX"
                            type="object"
                            icon="fa-print"
                            class="oe_highlight"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_province_reimbursements_report" model="ir.actions.act_window">
        <field name="name">Reporte de reembolsos de provincia</field>
        <field name="res_model">province.reimbursements.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_province_reimbursements_report_form"/>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

</odoo>
