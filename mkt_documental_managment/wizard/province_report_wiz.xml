<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard Form View -->
    <record id="view_province_report_form" model="ir.ui.view">
        <field name="name">province.report.form</field>
        <field name="model">province.report</field>
        <field name="arch" type="xml">
            <form string="Expenses report (simple)">
                <footer>
                    <button name="action_print_xlsx"
                            string="Print xlsx"
                            type="object"
                            icon="fa-print"
                            class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open the wizard -->
    <record id="action_province_report" model="ir.actions.act_window">
        <field name="name">Province Report</field>
        <field name="res_model">province.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_province_report_form"/>
        <field name="target">new</field>
        <!-- Opcional: contexto inicial -->
        <field name="context">{}</field>
    </record>

</odoo>