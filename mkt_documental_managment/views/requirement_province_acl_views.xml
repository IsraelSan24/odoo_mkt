<odoo>
  <record id="view_requirement_province_acl_tree" model="ir.ui.view">
    <field name="name">requirement.province.acl.tree</field>
    <field name="model">requirement.province.acl</field>
    <field name="arch" type="xml">
      <tree>
        <field name="active"/>
        <field name="employee_id"/>
        <field name="user_id"/>
        <field name="cost_center_ids" widget="many2many_tags"/>
      </tree>
    </field>
  </record>

  <record id="view_requirement_province_acl_form" model="ir.ui.view">
    <field name="name">requirement.province.acl.form</field>
    <field name="model">requirement.province.acl</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="active"/>
            <field name="employee_id" required="1"/>
            <field name="user_id" readonly="1"/>
            <field name="cost_center_ids" widget="many2many_tags" options="{'no_create_edit': True}" required="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_requirement_province_acl" model="ir.actions.act_window">
    <field name="name">Accesos Provinciales (No Lima)</field>
    <field name="res_model">requirement.province.acl</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="domain">[]</field>
  </record>
</odoo>
