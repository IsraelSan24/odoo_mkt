<odoo>
    <record id="view_attendance_tracking_report_wizard" model="ir.ui.view">
        <field name="name">attendance.tracking.report.wizard.form</field>
        <field name="model">attendance.tracking.report</field>
        <field name="arch" type="xml">
            <form string="Generar Reporte de Tareo">
                <group>
                    <field name="month"/>
                    <field name="year"/>
                </group>
                <footer>
                    <button string="Crear Tareo Editable"
                            type="object"
                            name="action_generate_tareo_sheet"
                            class="btn-secondary"/>

                    <button string="Exportar a Excel"
                            type="object"
                            name="action_print_xlsx"
                            class="btn-primary"/>

                    <button string="Cancelar"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_attendance_tracking_report_wizard" model="ir.actions.act_window">
        <field name="name">Generar Reporte de Tareo</field>
        <field name="res_model">attendance.tracking.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
