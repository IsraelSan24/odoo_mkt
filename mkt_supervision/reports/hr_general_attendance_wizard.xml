<odoo>
    <!-- Formulario del wizard -->
    <record id="view_attendance_report_all_wizard" model="ir.ui.view">
        <field name="name">attendance.report.all.wizard.form</field>
        <field name="model">attendance.report.all</field>
        <field name="arch" type="xml">
            <form string="Generar Reporte de Asistencias (Todos)">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button string="Exportar a Excel"
                            type="object"
                            name="action_print_xlsx"
                            class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n para abrir el wizard -->
    <record id="action_attendance_report_all_wizard" model="ir.actions.act_window">
        <field name="name">Generar Reporte de Asistencias (Todos)</field>
        <field name="res_model">attendance.report.all</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
