<odoo>
  <record id="view_applicant_approval_wizard_form" model="ir.ui.view">
    <field name="name">applicant.set.contract.fields.wizard.form</field>
    <field name="model">applicant.set.contract.fields.wizard</field>
    <field name="arch" type="xml">
      <form string="Set First Contract Fields">
        <group>
          <field name="cost_center_id"/>
          <field name="first_contract_start"/>
          <field name="first_contract_end"/>
          <field name="salary_proposed"/>
        </group>
        <footer>
          <button string="Save and Approve" type="object" name="action_save_and_approve" class="btn-primary"/>
          <button string="Save" type="object" name="action_save" class="btn-secondary"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
