<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_applicant_blacklist_confirm_wizard" model="ir.ui.view">
    <field name="name">applicant.blacklist.confirm.wizard.form</field>
    <field name="model">applicant.blacklist.confirm.wizard</field>
    <field name="arch" type="xml">
      <form string="Confirmar cambio de etapa" version="7.0">
        <group>
          <field name="applicant_id" readonly="1"/>
          <field name="target_stage_id" readonly="1"/>
          <field name="note" nolabel="1" readonly="1"/>
        </group>
        <footer>
          <button string="Continuar de todos modos" type="object"
                  name="action_continue" class="btn-primary"/>
          <button string="Cancelar" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_applicant_blacklist_confirm_wizard" model="ir.actions.act_window">
    <field name="name">Confirmaci√≥n de Blacklist</field>
    <field name="res_model">applicant.blacklist.confirm.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <!-- Pasamos el stage solicitado en el contexto -->
    <field name="context">{'vals': {'stage_id': 2}}</field>
  </record>
</odoo>
