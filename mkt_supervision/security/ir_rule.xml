    <!-- Regla para usuarios normales: solo ven sus propios tareos -->
    <record id="attendance_tareo_sheet_user_rule" model="ir.rule">
        <field name="name">Tareo: Usuario solo ve sus propios registros</field>
        <field name="model_id" ref="model_attendance_tareo_sheet"/>
        <field name="domain_force">[('responsible_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="attendance_tareo_sheet_manager_rule" model="ir.rule">
        <field name="name">Tareo: Manager ve todos los registros</field>
        <field name="model_id" ref="model_attendance_tareo_sheet"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('hr_contract.group_hr_contract_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

