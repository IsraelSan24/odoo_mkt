<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="rule_supervision_attendance_access" model="ir.rule">
        <field name="name">Ver asistencias del equipo</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="domain_force">['|', ('employee_id.user_id', '=', user.id), ('employee_id.parent_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('mkt_supervision.group_supervision_admin')), (4, ref('mkt_supervision.group_supervision_supervisor'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="recruiter_team_supevisors_rule" model="ir.rule">
        <field name="name">Supervision Recruiter Team</field>
        <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
        <field name="domain_force">
            [
                ('department_id', 'in', user.get_recruiter_departments()),
            ]
        </field>
        <field name="groups" eval="[4, ref('mkt_supervision.group_supervision_supervisor')]"/>
    </record>

</odoo>
