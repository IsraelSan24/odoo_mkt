<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="rule_admin_attendance_access" model="ir.rule">
        <field name="name">Ver asistencias del todos</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('mkt_supervision.group_supervision_admin'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="rule_supervision_attendance_access" model="ir.rule">
        <field name="name">Ver asistencias del equipo</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="domain_force">['|', ('employee_id.user_id', '=', user.id), ('employee_id.parent_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('mkt_supervision.group_supervision_supervisor'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="contract_viewer_admin_rule" model="ir.rule">
        <field name="name">Contract Viewer for Admin</field>
        <field name="model_id" ref="hr_contract.model_hr_contract"/>
        <field name="groups" eval="[(4, ref('mkt_supervision.group_supervision_admin'))]"/>
        <field name="domain_force">
            [(1, '=', 1)]
        </field>
    </record>

    <record id="contract_viewer_supervisor_rule" model="ir.rule">
        <field name="name">Contract Viewer for Supervision</field>
        <field name="model_id" ref="hr_contract.model_hr_contract"/>
        <field name="groups" eval="[(4, ref('mkt_supervision.group_supervision_supervisor'))]"/>
        <field name="domain_force">
            ['|',('employee_id.address_home_id.belong_applicant_id.department_id', 'in', user.get_recruiter_departments()), '|', ('employee_id.user_id', '=', user.id), ('employee_id.parent_id.user_id', '=', user.id)]
        </field>
    </record>
    
