<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_attendance_tareo_holiday_year_tree" model="ir.ui.view">
        <field name="name">attendance.tareo.holiday.year.tree</field>
        <field name="model">attendance.tareo.holiday.year</field>
        <field name="arch" type="xml">
            <tree string="Feriados (Tareo)">
                <field name="name"/>
                <field name="year"/>
                <field name="company_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_attendance_tareo_holiday_year_form" model="ir.ui.view">
        <field name="name">attendance.tareo.holiday.year.form</field>
        <field name="model">attendance.tareo.holiday.year</field>
        <field name="arch" type="xml">
            <form string="Feriados (Tareo)">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="company_id"/>
                        <field name="year"/>
                        <field name="active"/>
                    </group>

                    <notebook>
                        <page string="Fechas">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="description"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_attendance_tareo_holiday_year" model="ir.actions.act_window">
        <field name="name">Feriados (Tareo)</field>
        <field name="res_model">attendance.tareo.holiday.year</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_attendance_tareo_holiday" name="Feriados" action="action_attendance_tareo_holiday_year" parent="hr.menu_hr_employee_payroll"  sequence="5"/>
</odoo>
