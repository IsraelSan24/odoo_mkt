<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="show_powerbi_report_customer_rule" model="ir.rule">
        <field name="name">Show power BI report only for assigned customer</field>
        <field name="model_id" ref="mkt_powerbi.model_powerbi_report"/>
        <field name="domain_force"> [
        ('customer_ids.user_id','=',user.id)        
        ]</field>
        <field name="groups" eval="[(4, ref('mkt_powerbi.customer'))]" />
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="False" />
        <field name="perm_write" eval="False" />
        <field name="perm_unlink" eval="False" />
    </record>

    <record id="show_powerbi_report_user_rule" model="ir.rule">
        <field name="name">Show power BI report only if they've created it</field>
        <field name="model_id" ref="mkt_powerbi.model_powerbi_report"/>
        <field name="domain_force"> [
        ('author_id','=',user.id)        
        ]</field>
        <field name="groups" eval="[(4, ref('mkt_powerbi.user'))]" />
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True" />
        <field name="perm_write" eval="True" />
        <field name="perm_unlink" eval="True" />
    </record>

</odoo>
