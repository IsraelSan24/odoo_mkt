<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_massive_contract_end_tree" model="ir.ui.view">
        <field name="name">massive.contract.end.tree</field>
        <field name="model">massive.contract.end</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="file_employees"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_massive_contract_end_form" model="ir.ui.view">
        <field name="name">massive.contract.end.form</field>
        <field name="model">massive.contract.end</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div>
                            <field name="massive_termination_done" invisible="1"/>
                            <group>
                                <h1>
                                    <field name="name" string="Nombre del Cese Masivo" readonly="1"/>
                                </h1>
                            </group>
                            <group>
                                <field name="file_employees" string="Empleados a Cesar" attrs="{'readonly': [('massive_termination_done', '=', True)]}"/>
                                <field name="file_result" string="Empleados no Encontrados"  attrs="{'invisible': [('file_result', '=', False)]}"/>
                                <field name="error_message" string="Errores de Verificación"  attrs="{'invisible': [('error_message', '=', False)]}" readonly="1"/>
                            </group>
                            <group>
                                <field name="employee_ids" context="{'active_test': False}" attrs="{'readonly': [('massive_termination_done', '=', True)]}" nolabel="1">
                                    <tree>
                                        <field name="identification_id"/>
                                        <field name="name"/>
                                        <field name="cost_center_id"/>
                                        <field name="department_id"/>
                                        <field name="is_duplicated"/>
                                        <field name="is_terminated" string="Cesado"/>
                                        <field name="departure_reason_id" column_invisible="parent.massive_termination_done == False"/>
                                        <field name="departure_date" column_invisible="parent.massive_termination_done == False"/>
                                        <!-- <button name="identification_id_onchange" type="object" string="Update NºIdentification" class="oe_highlight"/> -->
                                    </tree>
                                </field>
                            </group>
                        <footer>
                            <field name="reviewed" invisible="True"/>
                            <button string="Employee verification" name="employee_verification_xlsx" type="object" class="oe_highlight" attrs="{'invisible': [('massive_termination_done', '=', True)]}"/>
                            <button string="Employee termination" name="massive_employee_terminations_xlsx" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('reviewed', '=', False), ('massive_termination_done', '=', True)]}"/>
                        </footer>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_massive_contract_end_action" model="ir.actions.act_window">
        <field name="name">Massive Contract End</field>
        <field name="res_model">massive.contract.end</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
