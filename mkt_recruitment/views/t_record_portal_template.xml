<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Tarjeta en /my/home -->
  <template id="portal_my_home_trecord" name="Show My T-Record" customize_show="True" inherit_id="portal.portal_my_home" priority="41">
    <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
      <t t-call="portal.portal_docs_entry">
        <t t-set="title">My T-Record</t>
        <t t-set="url" t-value="'/my/trecord'"/>
        <t t-set="placeholder_count" t-value="'trecord_count'"/>
      </t>
    </xpath>
  </template>

  <!-- Submenú / breadcrumbs para T-Record -->
  <template id="portal_my_home_menu_trecord" name="Portal layout : T-Record" inherit_id="portal.portal_breadcrumbs" priority="41">
    <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
      <li t-if="page_name == 'trecord' or trecord_document and trecord_document.state in ('draft','signed','to_sign','open')"
          t-attf-class="breadcrumb-item #{'active'}">
        <a t-if="trecord_document" t-attf-href="/my/trecord?{{ keep_query() }}">T-Records</a>
        <t t-else="">T-Records</t>
      </li>
      <li t-if="trecord_document" class="breadcrumb-item active">
        <t t-esc="trecord_document.name"/>
      </li>
    </xpath>
  </template>

  <!-- Listado /my/trecord -->
  <template id="portal_my_trecords" name="My T-Records">
    <t t-call="portal.portal_layout">
      <t t-set="breadcrumbs_searchbar" t-value="True"/>
      <t t-call="portal.portal_searchbar">
        <t t-set="title">T-Records</t>
      </t>

      <t t-if="not trecords">
        <p>There are currently no t-records for your account.</p>
      </t>

      <t t-if="trecords" t-call="portal.portal_table">
        <thead>
          <tr class="active">
            <th>
              <span class="d-none d-md-inline">T-Record</span>
              <span class="d-block d-md-none">Ref.</span>
            </th>
            <th class="text-right">Created</th>
            <th class="text-right">State</th>
          </tr>
        </thead>
        <t t-foreach="trecords" t-as="rec">
          <tr t-attf-onclick="window.location='#{rec.get_portal_url()}'" style="cursor:pointer;">
            <td><t t-esc="rec.name"/></td>
            <td class="text-right">
              <span t-field="rec.create_date" t-options="{'widget': 'datetime'}"/>&amp;nbsp;
            </td>
            <td class="text-center">
              <span t-if="rec.state == 'to_sign'" class="badge badge-pill badge-warning">
                <i class="fa fa-clock-o" title="To sign"/> To sign
              </span>
              <span t-if="rec.state == 'signed'" class="badge badge-pill badge-success">
                <i class="fa fa-fw fa-check" title="Signed"/> Signed
              </span>
              <span t-if="rec.state == 'draft'" class="badge badge-pill badge-secondary">
                <i class="fa fa-file-o" title="Draft"/> Draft
              </span>
            </td>
          </tr>
        </t>
      </t>

      <t t-call="portal.pager"/>
    </t>
  </template>

  <!-- Página de detalle (heredando como el contrato) -->
  <template id="trecord_document_portal_template" name="T-Record Document Portal Template" inherit_id="portal.portal_sidebar" primary="True">
    <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
      <div class="row mt16 o_portal_sale_sidebar">

        <!-- Sidebar con botón de firma (mismos patrones que contrato) -->
        <t t-call="portal.portal_record_sidebar">
          <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>

          <t t-set="title">
            <h2 class="mb-0"><b t-field="trecord_document.state"/></h2>
          </t>

          <t t-set="entries">
            <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
              <li class="list-group-item flex-grow-1 o_trecord_signature_t"
                  t-att-data-document-id="trecord_document.id"
                  t-att-data-token="trecord_document.access_token">

                <a t-if="trecord_document.has_to_be_signed(True)"
                   role="button"
                   class="btn btn-primary btn-block mb8 o_valterm"
                   id="o_open_sign_options_trecord"
                   href="#"
                   data-toggle="modal"
                   data-target="#trecordSignOptionsModal"
                   t-att-data-document-id="trecord_document.id"
                   t-att-data-token="trecord_document.access_token">
                  <i class="fa fa-check"/>Accept &amp; Sign
                </a>

                <t t-if="trecord_document.t_record">
                  <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                    <div class="btn-group flex-grow-1 mr-1 mb-1">
                      <a class="btn btn-secondary btn-block o_download_btn"
                         t-att-href="trecord_document.get_portal_url(report_type='pdf', download=True)"
                         title="Download">
                        <i class="fa fa-download"/> Download
                      </a>
                    </div>
                    <div class="btn-group flex-grow-1 mb-1">
                      <a class="btn btn-secondary btn-block o_print_btn o_portal_invoice_print"
                         t-att-href="trecord_document.get_portal_url(report_type='pdf')"
                         title="Print" target="_blank">
                        <i class="fa fa-print"/> Print
                      </a>
                    </div>
                  </div>
                </t>
              </li>

              <!-- Datos informativos del portal (opcionales) -->
              <li class="navspy list-group-item pl-0 flex-grow-1" t-ignore="true" role="complementary">
                <ul class="nav flex-column bs-sidenav"></ul>
              </li>
            </ul>

            <!-- Bloque de metadatos, si tienes campos similares en t.record -->
            <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
              <li class="list-group-item flex-grow-1">
                <span style="font-size:0.6rem;">User name: </span><span style="font-size:0.5rem;" t-esc="trecord_document.partner_id.name"/>
              </li>
              <li class="list-group-item flex-grow-1">
                <span style="font-size:0.6rem;">User email: </span><span style="font-size:0.5rem;" t-esc="trecord_document.email"/>
              </li>
              <li class="list-group-item flex-grow-1">
                <span style="font-size:0.6rem;">IP: </span><span style="font-size:0.5rem;" t-esc="trecord_document.ip"/>
              </li>
              <li class="list-group-item flex-grow-1">
                <span style="font-size:0.6rem;">OS: </span><span style="font-size:0.5rem;" t-esc="trecord_document.os"/>
              </li>
              <li class="list-group-item flex-grow-1">
                <span style="font-size:0.6rem;">Browser: </span><span style="font-size:0.5rem;" t-esc="trecord_document.browser"/>
              </li>
              <li class="list-group-item flex-grow-1">
                <span style="font-size:0.6rem;">Signed on: </span><span style="font-size:0.5rem;" t-esc="trecord_document.employee_signed_on"/>
              </li>
              <li class="list-group-item flex-grow-1">
                <span style="font-size:0.6rem;">Latitude: </span><span style="font-size:0.5rem;" t-esc="trecord_document.latitude"/>
              </li>
              <li class="list-group-item flex-grow-1">
                <span style="font-size:0.6rem;">Longitude: </span><span style="font-size:0.5rem;" t-esc="trecord_document.longitude"/>
              </li>
            </ul>
          </t>
        </t>

        <!-- Modales (idéntica estructura al contrato, con IDs trecord) -->

        <!-- Modal opciones envío: SMS o Email -->
        <div role="dialog" class="modal fade" id="trecordSignOptionsModal" tabindex="-1">
          <div class="modal-dialog">
            <div class="modal-content">
              <header class="modal-header">
                <h4 class="modal-title">Choose how to receive the code</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">❌</button>
              </header>
              <div class="modal-body text-center p-3">
                <p>A validation code is mandatory to sign your T-Record. Select the method to receive the validation code:</p>
                <div class="d-flex justify-content-around">
                  <button id="send-trecord-via-sms" class="btn btn-primary" type="button">Send via SMS</button>
                  <button id="send-trecord-via-email" class="btn btn-outline-primary" type="button">Send via Email</button>
                </div>
                <div id="send-method-spinner" style="display:none;margin-top:12px;">
                  <i class="fa fa-spinner fa-spin"></i> Sending...
                </div>
                <div id="send-method-error" class="text-danger mt-2" style="display:none;"></div>
              </div>
              <footer class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              </footer>
            </div>
          </div>
        </div>

        <!-- Modal validación de 4 dígitos -->
        <div role="dialog" class="modal fade o_trecord_validate_box" id="trecordvalidatebox">
          <div class="modal-dialog" t-if="trecord_document.has_to_be_signed(True)">
            <form id="trecordvalidatedigits"
                  method="POST"
                  t-att-data-document-id="trecord_document.id"
                  t-att-data-token="trecord_document.access_token"
                  class="js_accept_json modal-content js_website_submit_form">
              <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

              <style>
                .digit-input, digit-input-4 {
                  width: 50px; height: 50px; font-size: 24px; text-align: center;
                  margin: 5px; border: 1px solid #ccc; border-radius: 5px;
                }
                .input-container { display:flex; justify-content:center; }
                input[type=number]::-webkit-outer-spin-button,
                input[type=number]::-webkit-inner-spin-button { -webkit-appearance:none; margin:0; }
                input[type=number] { -moz-appearance:textfield; }
              </style>

              <input type="hidden" id="verification_method" name="verification_method" value=""/>

              <header class="modal-header">
                <h4 class="modal-title">Enter Verification Code</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">❌</button>
              </header>

              <div class="modal-body">
                <div class="text-center mb-3" id="verification-message">
                  <p id="verification-text">We sent a verification code to:</p>
                  <div id="email-info" style="display: none;">
                    <strong><i class="fa fa-envelope"></i> <span t-esc="trecord_document.email or trecord_document.partner_id.email"/></strong>
                  </div>
                  <div id="sms-info" style="display: none;">
                    <strong><i class="fa fa-mobile"></i> <span t-esc="trecord_document.partner_id.mobile or trecord_document.partner_id.phone or 'your mobile phone'"/></strong>
                  </div>
                  <p class="text-muted small mt-2">
                    If you haven't received it within 2 minutes, please try again.
                  </p>
                </div>
              </div>

              <main class="modal-body" id="validate-dialog-trecord" style="display:flex;justify-content:center;">
                <input name="p_number1" type="number" class="digit-input" id="trecord_input1"/>
                <input name="p_number2" type="number" class="digit-input" id="trecord_input2"/>
                <input name="p_number3" type="number" class="digit-input" id="trecord_input3"/>
                <input name="p_number4" type="number" class="digit-input" id="trecord_input4"/>
              </main>

              <footer>
                <button id="validate-document-btn-boxes" type="button" class="btn btn-primary btn-block mb8" style="display:none;">
                  <i class="fa fa-check"/> Validate Code
                </button>
                <span id="validation-document-error-boxes" style="display:none;color:red;">Invalid code. Please, try again.</span>
              </footer>
            </form>
          </div>
        </div>

        <!-- Contenido central + modal de firma -->
        <div id="trecord_document_content" class="col-12 col-lg justify-content-end">

          <!-- Modal firma (idéntico patrón, IDs trecord) -->
          <div role="dialog" class="modal fade" id="sign-dialog-trecord">
            <div class="modal-dialog" t-if="trecord_document.has_to_be_signed(True)">
              <form id="trecordaccept" method="POST"
                    t-att-data-document-id="trecord_document.id"
                    t-att-data-token="trecord_document.access_token"
                    class="js_accept_json modal-content js_website_submit_form">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                <header class="modal-header">
                  <h4 class="modal-title">Validate T-Record</h4>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">❌</button>
                </header>

                <main class="modal-body">
                  <!-- Holder para los 4 dígitos -->
                  <input type="hidden" id="trecord_digits_holder" name="digits" value=""/>

                  <!-- Componente de firma -->
                  <div id="portal_signature_trecord" class="o_portal_signature">
                    <t t-call="portal.signature_form">
                      <t t-set="call_url" t-value="trecord_document.get_portal_url(suffix='/sign')"/>
                      <t t-set="default_name" t-value="signature_short_name"/>
                      <t t-set="hide_submit_button" t-value="True"/>
                    </t>
                  </div>

                  <div class="text-center mt-3">
                    <button id="confirm-sign-trecord" type="button" class="btn btn-primary btn-lg">
                      <i class="fa fa-check"/> Confirm &amp; Sign
                    </button>
                  </div>

                  <style>
                    #portal_signature_trecord button[type="submit"],
                    #portal_signature_trecord .o_portal_sign_submit,
                    #portal_signature_trecord .btn-primary:not(#confirm-sign-trecord) {
                      display: none !important;
                    }
                  </style>
                </main>
              </form>
            </div>
          </div>

          <div t-if="message == 'sign_ok'" class="alert alert-success alert-dismissable d-print-none" role="status">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">❌</button>
            <strong>Thank You!</strong><br/>
            <t t-if="message == 'sign_ok' and trecord_document.state == 'signed'">Your document has been signed.</t>
          </div>

          <div t-attf-class="card #{'pb-5' if report_type == 'html' else ''}" id="portal_sale_content_trecord">
            <!-- Llama al contenido que incluye el iframe -->
            <div t-call="mkt_recruitment.trecord_document_portal_content"/>
          </div>
        </div>
      </div>
    </xpath>
  </template>

  <!-- Contenido (iframe con decode, tal cual indicas) -->
  <template id="trecord_document_portal_content" name="T-Record portal content">
    <div class="pb-2 pt-3 card-header bg-white">
      <h2 class="my-0">
        <em t-esc="trecord_document.name"/>
      </h2>
    </div>
    <div class="card-body">
      <t t-if="trecord_document.t_record">
        <iframe
          t-att-src="'data:application/pdf;base64,' + (trecord_document.t_record and trecord_document.t_record.decode('utf-8') or '') + '#navpanes=0&amp;toolbar=0&amp;view=FitH'"
          width="100%" height="600" type="application/pdf">
        </iframe>
      </t>
      <t t-else="">
        <p>No PDF uploaded.</p>
      </t>
    </div>
  </template>

  <!-- Regla de acceso portal -->
  <record id="t_record_portal_rule" model="ir.rule">
    <field name="name">t.record portal own</field>
    <field name="model_id" ref="model_t_record"/>
    <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    <field name="domain_force">[('partner_id','=',user.partner_id.id)]</field>
  </record>

</odoo>