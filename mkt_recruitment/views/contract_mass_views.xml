<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_contract_mass_tree" model="ir.ui.view">
        <field name="name">contract.mass.tree</field>
        <field name="model">contract.mass</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="contract_type_id"/>
                <field name="mode"/>
                <field name="employee_ids" widget="many2many_tags" optional="hide"/>
                <field name="date_start" optional="hide"/>
                <field name="date_end" optional="hide"/>
                <field name="wage" optional="hide"/>
                <field name="hr_responsible_id" optional="hide"/>
                <field name="state" widget="badge"
                    decoration-success="state == 'generated'"/>
            </tree>
        </field>
    </record>

    <record id="view_contract_mass_form" model="ir.ui.view">
        <field name="name">contract.mass.form</field>
        <field name="model">contract.mass</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated"/>
                    <button name="create_contract_to_new_employee" string="Create contracts"
                        type="object" class="oe_highlight" attrs="{'invisible':['|',('state','!=','draft'),('mode','!=','new_employee')]}"/>
                    <button name="create_renewed_contract" string="Create renewed"
                        type="object" class="oe_highlight" attrs="{'invisible':['|',('state','!=','draft'),('mode','!=','renovation')]}"/>
                    <button name="button_update_contracts" string="Update contracts"
                        type="object" class="oe_highlight" attrs="{'invisible':[('state','=','draft')]}"/>
                    <button name="button_send_contracts" string="Send contracts"
                        type="object" class="oe_highlight" attrs="{'invisible':[('state','=','draft')]}"/>
                    <button name="button_unsend_contracts" string="Unsend contracts"
                        type="object" class="oe_highlight" attrs="{'invisible':[('state','=','draft')]}"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" readonly="True"/>
                    </h1>
                    <group>
                        <group>
                            <field name="mode" 
                                   attrs="{'readonly':[('state','!=','draft')]}" 
                                   widget="radio"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="renew_employee_ids" 
                                   widget="many2many_tags" 
                                   attrs="{'readonly':[('state','!=','draft')], 'invisible': [('mode','!=','renovation')]}"
                                   options="{'color_field': 'color', 'no_create': True, 'no_edit': True}"/>
                            <field name="contract_type_id" 
                                   attrs="{'readonly':[('state','!=','draft')],'invisible':['&amp;', ('mode_mode','!=','manual'), ('mode','!=','new_employee')],'required':['|', ('mode_mode','=','manual'), ('mode','=','new_employee')]}" 
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="wage" 
                                   attrs="{'readonly':[('state','!=','draft')],'invisible':['&amp;', ('mode_mode','!=','manual'), ('mode','!=','new_employee')],'required':['|', ('mode_mode','=','manual'), ('mode','=','new_employee')]}"/>
                            <button name="action_open_identifiers_wizard" 
                                    type="object" 
                                    string="Search Employees by IDs" 
                                    class="btn-primary"
                                    attrs="{'readonly':[('state','!=','draft')], 'invisible': [('mode','!=','new_employee')]}"/>
                        </group>
                        <group>
                            <field name="validate_cost_center_id" 
                                   attrs="{'readonly':[('state','!=','draft')], 'invisible': [('mode','!=','new_employee')],'required':[('mode','=','new_employee')]}"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="mode_mode" 
                                   attrs="{'readonly':[('state','!=','draft')], 'invisible':[('mode','!=','renovation')]}" 
                                   widget="radio"/>
                            <field name="renewed_months" 
                                   attrs="{'readonly':[('state','!=','draft')],'invisible':['|', ('mode_mode','!=','auto'), ('mode','!=','renovation')],'required':[('mode_mode','=','auto')]}" />
                            <field name="date_start" 
                                   attrs="{'readonly':[('state','!=','draft')],'invisible':['&amp;', ('mode_mode','!=','manual'), ('mode','!=','new_employee')],'required':['|', ('mode_mode','=','manual'), ('mode','=','new_employee')]}"/>
                            <field name="date_end" 
                                   attrs="{'readonly':[('state','!=','draft')],'invisible':['&amp;', ('mode_mode','!=','manual'), ('mode','!=','new_employee')],'required':['|', ('mode_mode','=','manual'), ('mode','=','new_employee')]}"/>
                            <field name="hr_responsible_id" 
                                   invisible="True"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Employees" attrs="{'invisible':[('mode','!=','new_employee')]}">
                            <field string="Employees Found with Given Cost Center" name="employee_ids" 
                                attrs="{'readonly':[('state','!=','draft')], 'invisible':[('mode','!=','new_employee')]}"
                                options="{'color_field': 'color', 'no_edit': True}"
                                nolabel="1">
                                <tree>  
                                    <field name="name"/>
                                    <field name="department_id"/>
                                    <field name="cost_center_id"/>
                                    <field name="job_id"/>
                                    <field name="parent_id"/>
                                </tree>
                            </field> 
                        </page>

                        <page string="Contracts">
                            <field name="last_contract_ids" readonly="True"
                                   attrs="{'invisible':[('mode','!=','renovation')]}" />
                            <field name="contracts_ids" readonly="True"
                                   attrs="{'invisible':[('mode','!=','new_employee')]}">
                                <tree>  
                                    <field name="name"/>
                                    <field name="employee_id"/>
                                    <field name="job_id"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'close'" decoration-success="state == 'open'"/>
                                    <field name="signature_state" widget="badge" decoration-info="state == 'to_sign'" decoration-warning="state == 'cancel'" decoration-success="state == 'signed'"/>
                                    <field name="signature_employer_state" widget="badge" decoration-info="state == 'to_sign'" decoration-warning="state == 'cancel'" decoration-success="state == 'signed'"/>
                                    <field name="resource_calendar_id" optional="hide"/>
                                    <field name="structure_type_id" optional="hide"/>
                                </tree>
                            </field>
                                
                        </page>

                        <page string="Errors" attrs="{'invisible':[('mode','!=','new_employee')]}">
                            <group>
                                <group>
                                    <field string="Employees with Different CC" name="employees_with_other_cc" 
                                        attrs="{'readonly':[('state','!=','draft')], 'invisible':[('mode','!=','new_employee')]}"
                                        options="{'color_field': 'color', 'no_create': True, 'no_edit': True}">
                                        <tree>  
                                            <field name="name"/>
                                            <field name="department_id"/>
                                            <field name="cost_center_id"/>
                                            <field name="job_id"/>
                                            <field name="parent_id"/>
                                        </tree>
                                    </field>
                                </group>
                                <group>
                                    <field string="Employees not Found" name="identifiers_not_found" attrs="{'invisible': [('identifiers_not_found', '=', False)]}"/>
                                </group>
                            </group>
                        </page>                        

                    </notebook>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div> -->
            </form>
        </field>
    </record>

    <record id="view_contract_mass_action" model="ir.actions.act_window">
        <field name="name">Massive Contract</field>
        <field name="res_model">contract.mass</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>