    <record id="paperformat_requerimiento" model="report.paperformat">
      <field name="name">A4 Requerimiento</field>
      <field name="default" eval="True"/>
      <field name="format">custom</field>
      <field name="page_height">0</field>
      <field name="page_width">0</field>
      <field name="orientation">Portrait</field>
      <field name="margin_top">0</field>
      <field name="margin_bottom">0</field>
      <field name="margin_left">3</field>
      <field name="margin_right">0</field>
      <field name="header_line" eval="False"/>
      <field name="header_spacing">0</field>
      <field name="dpi">90</field>
    </record>

    
    <record id="action_report_requerimiento" model="ir.actions.report">
        <field name="name">Requerimiento</field>
        <field name="model">report.requerimiento</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">gestion_documental_mkt.report_requerimiento</field>
        <field name="report_file">gestion_documental_mkt.report_requerimiento</field>
        <field name="binding_model_id" ref="model_report_requerimiento"/>
        <field name="binding_type">report</field>
