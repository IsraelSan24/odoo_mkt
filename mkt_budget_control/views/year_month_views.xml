<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_year_month_tree" model="ir.ui.view">
        <field name="name">year.month.tree</field>
        <field name="model">year.month</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="year"/>
                <field name="month"/>
                <field name="sequence_id"/>
            </tree>
        </field>
    </record>
    
    <record id="view_year_month_form" model="ir.ui.view">
        <field name="name">year.month.form</field>
        <field name="model">year.month</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="year"/>
                            <field name="month"/>
                            <field name="sequence_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_year_month_action" model="ir.actions.act_window">
        <field name="name">Month &amp; Year</field>
        <field name="res_model">year.month</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
