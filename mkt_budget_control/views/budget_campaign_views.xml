<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_budget_campaign_tree" model="ir.ui.view">
        <field name="name">view.budget.campaign.tree</field>
        <field name="model">budget.campaign</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <record id="view_budget_campaign_form" model="ir.ui.view">
        <field name="name">view.budget.campaign.form</field>
        <field name="model">budget.campaign</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <h1>
                        <field name="name"/>
                    </h1>
                </group>
                <group>
                    <field name="user_id" invisible="True"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_view_budget_campaign" model="ir.actions.act_window">
        <field name="name">Campaign</field>
        <field name="res_model">budget.campaign</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>